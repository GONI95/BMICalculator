<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CalIngredientFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryVariant">@color/base_color</item>
        <item name="colorOnPrimary">@color/base_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/base_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/avd_splash_anim</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_splash_branding</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>