<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CalIngredientFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color / icon color -->
        <item name="android:statusBarColor">@color/base_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color / icon color [미설정]-->
        <item name="android:navigationBarColor">@color/base_color</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/base_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/avd_splash_anim</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_splash_branding</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

    <!--
    fitsSystemWindows : view가 차지하는 영역을 statusBar 또는 softKey 영역을 제외하여 확장
    windowTranslucentStatus : statusBar 투명 설정
    -->
    <style name="AppTheme.AppBarOverlay" parent="Theme.CalIngredientFood">
        <item name="elevation">0dp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/base_color</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/light_contrasting_color</item>
        <item name="colorControlActivated">@color/light_contrasting_color</item>
    </style>
</resources>