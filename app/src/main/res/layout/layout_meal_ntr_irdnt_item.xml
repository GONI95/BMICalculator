<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="sang.gondroid.calingredientfood.domain.model.MealNtrIrdntModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toTopOf="@+id/createDateTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView"
                    srcFromUri="@{item.mealImage}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <CheckBox
                    android:id="@+id/itemCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{item.checkState}"
                    android:buttonTint="@color/blue"
                    android:background="@color/white"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/createDateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{@string/date_desc_info(item.createdDate)}"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/totalCalorieTextView"
                app:layout_constraintEnd_toEndOf="@+id/frameLayout"
                app:layout_constraintStart_toStartOf="@+id/frameLayout"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                tools:text="2022-04-25" />

            <TextView
                android:id="@+id/totalCalorieTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/calorie_desc_info(item.totalCalorie)}"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/totalCarbohydrateTextView"
                app:layout_constraintEnd_toEndOf="@+id/createDateTextView"
                app:layout_constraintStart_toStartOf="@+id/createDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/createDateTextView"
                tools:text="칼로리" />

            <TextView
                android:id="@+id/totalCarbohydrateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/carbohydrate_desc_info(item.totalCarbohydrate)}"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/totalProteinTextView"
                app:layout_constraintEnd_toEndOf="@+id/createDateTextView"
                app:layout_constraintStart_toStartOf="@+id/createDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/totalCalorieTextView"
                tools:text="탄수화물 : 10.00g" />

            <TextView
                android:id="@+id/totalProteinTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/protein_desc_info(item.totalProtein)}"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/totalFatTextView"
                app:layout_constraintEnd_toEndOf="@+id/createDateTextView"
                app:layout_constraintStart_toStartOf="@+id/createDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/totalCarbohydrateTextView"
                tools:text="단백질 : 10.00g" />

            <TextView
                android:id="@+id/totalFatTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{@string/fat_desc_info(item.totalFat)}"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/createDateTextView"
                app:layout_constraintStart_toStartOf="@+id/createDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/totalProteinTextView"
                tools:text="지방 : 10.00g" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>